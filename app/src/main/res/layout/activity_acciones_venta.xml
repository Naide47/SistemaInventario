<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.venta.AccionesVentaActivity">

  <Button
      android:id="@+id/actVent_btnVolver"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="36dp"
      android:layout_marginTop="32dp"
      android:text="@string/btn_volver"
      android:textSize="24sp"
      app:icon="@drawable/ic_baseline_arrow_back_24"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/textView12"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="86dp"
      android:text="@string/txt_detalles"
      android:textSize="50sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <LinearLayout
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="36dp"
      android:orientation="vertical"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <Button
        android:id="@+id/actVent_btnModificar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_modificar"
        android:textSize="24sp"
        app:icon="@drawable/ic_editar" />

    <Button
        android:id="@+id/actVent_btnEliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_eliminar"
        android:textSize="24sp"
        app:backgroundTint="@color/danger"
        app:icon="@drawable/ic_baseline_delete_forever_24" />

    <Button
        android:id="@+id/actVent_btnAceptar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_aceptar"
        android:textSize="24sp"
        app:icon="@drawable/ic_baseline_check_box_24" />

    <Button
        android:id="@+id/actVent_btnCancelar"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_cancelar"
        android:textColor="@color/danger"
        android:textSize="24sp" />
  </LinearLayout>

  <TableLayout
      android:id="@+id/actVent_tblDatos1"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="60dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="24dp"
      app:layout_constraintEnd_toStartOf="@+id/actVent_btnClsBuscar"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView12">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/textView13"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:labelFor="@id/actVent_edtNumero"
          android:text="@string/txt_numero"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/actVent_edtNumero"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:ems="10"
          android:enabled="false"
          android:importantForAutofill="no"
          android:inputType="textPersonName" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/textView14"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:labelFor="@id/actVent_edtClsClave"
          android:text="@string/cls_clave"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/actVent_edtClsClave"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:ems="10"
          android:importantForAutofill="no"
          android:inputType="number" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/textView17"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:labelFor="@id/actVent_edtClsNombre"
          android:text="@string/txt_nombre"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/actVent_edtClsNombre"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:ems="10"
          android:enabled="false"
          android:importantForAutofill="no"
          android:inputType="textPersonName" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/textView18"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:labelFor="@id/actVent_edtClsCalle"
          android:text="@string/txt_calle"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/actVent_edtClsCalle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:ems="10"
          android:enabled="false"
          android:importantForAutofill="no"
          android:inputType="textPersonName" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">


      <TextView
          android:id="@+id/textView19"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:labelFor="@id/actVent_edtVendClave"
          android:text="@string/vends_clave"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/actVent_edtVendClave"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:ems="10"
          android:importantForAutofill="no"
          android:inputType="number" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">


      <TextView
          android:id="@+id/textView20"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:labelFor="@id/actVent_edtVendNombre"
          android:text="@string/txt_nombre"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/actVent_edtVendNombre"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:ems="10"
          android:enabled="false"
          android:importantForAutofill="no"
          android:inputType="textPersonName" />
    </TableRow>

  </TableLayout>

  <TableLayout
      android:id="@+id/actVent_tblDatos2"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="32dp"
      android:layout_marginEnd="60dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/actVent_btnClsBuscar"
      app:layout_constraintTop_toBottomOf="@+id/textView12">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/textView15"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:labelFor="@id/actVent_edtFecha"
          android:text="@string/cv_txt_fecha"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/actVent_edtFecha"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:ems="10"
          android:focusable="false"
          android:importantForAutofill="no"
          android:inputType="none"
          android:longClickable="false"
          android:textIsSelectable="false" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/textView16"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:labelFor="@id/actVent_spnFR"
          android:text="@string/cv_f_r"
          android:textSize="20sp" />

      <Spinner
          android:id="@+id/actVent_spnFR"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:prompt="@string/seleccionar"
          android:spinnerMode="dialog" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/textView21"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:labelFor="@id/actVent_edtFactura"
          android:text="@string/cv_factura"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/actVent_edtFactura"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:ems="10"
          android:enabled="false"
          android:importantForAutofill="no"
          android:inputType="textPersonName" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="108dp">


      <TextView
          android:id="@+id/textView22"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:labelFor="@id/actVent_edtComision"
          android:text="@string/vends_comision"
          android:textSize="20sp" />

      <EditText
          android:id="@+id/actVent_edtComision"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:ems="10"
          android:importantForAutofill="no"
          android:inputType="number" />
    </TableRow>

  </TableLayout>

  <Button
      android:id="@+id/actVent_btnClsBuscar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="78dp"
      android:layout_weight="1"
      android:text="@string/txt_buscar"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView12" />

  <Button
      android:id="@+id/actVent_btnVendBuscar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="24dp"
      android:layout_marginTop="88dp"
      android:text="@string/txt_buscar"
      app:layout_constraintStart_toEndOf="@+id/actVent_tblDatos1"
      app:layout_constraintTop_toBottomOf="@+id/actVent_btnClsBuscar" />


  <TableLayout
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginStart="60dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="60dp"
      android:layout_marginBottom="8dp"
      android:stretchColumns="*"
      app:layout_constraintBottom_toTopOf="@+id/tableLayout3"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/actVent_tblDatos1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end">

      <TextView
          android:id="@+id/textView7"
          android:layout_width="0dp"

          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/cv_txt_clave" />

      <TextView
          android:id="@+id/textView23"
          android:layout_width="0dp"

          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/cv_txt_desc" />

      <TextView
          android:id="@+id/textView24"
          android:layout_width="0dp"

          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/cv_txt_unidad" />

      <TextView
          android:id="@+id/textView25"
          android:layout_width="0dp"

          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/cv_txt_linea" />

      <TextView
          android:id="@+id/textView26"
          android:layout_width="0dp"

          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/cv_txt_cantidad" />

      <TextView
          android:id="@+id/textView27"
          android:layout_width="0dp"

          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/vent_pventa" />

      <TextView
          android:id="@+id/textView28"
          android:layout_width="0dp"

          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:text="@string/cv_txt_importe" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/venta_detalle"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="7" />
    </TableRow>

  </TableLayout>

  <TableLayout
      android:id="@+id/tableLayout3"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="60dp"
      android:layout_marginEnd="60dp"
      android:layout_marginBottom="32dp"
      android:stretchColumns="*"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end"
        android:visibility="invisible">

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"

          android:text="@string/cv_txt_clave" />

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"

          android:text="@string/cv_txt_desc" />

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"

          android:text="@string/cv_txt_unidad" />

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"

          android:text="@string/cv_txt_linea" />

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"

          android:text="@string/cv_txt_cantidad" />

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"

          android:text="@string/vent_pventa" />

      <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"

          android:text="@string/cv_txt_importe" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="end">

      <TextView
          android:id="@+id/textView57"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_span="4"
          android:gravity="end"
          android:text="@string/cv_txt_totalPares" />

      <TextView
          android:id="@+id/actVent_txtPares"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:paddingStart="8dp"
          android:paddingEnd="8dp"
          android:scrollbars="horizontal"
          android:text="0" />

      <TextView
          android:id="@+id/textView59"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"

          android:gravity="end"
          android:text="@string/cv_txt_suma" />

      <TextView
          android:id="@+id/actVent_txtSuma"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingStart="8dp"
          android:paddingEnd="8dp"
          android:scrollbars="horizontal"
          android:text="0.00" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end">

      <TextView
          android:id="@+id/textView61"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_span="6"
          android:gravity="end"
          android:text="@string/cv_txt_iva" />

      <TextView
          android:id="@+id/actVent_txtIva"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingStart="8dp"
          android:paddingEnd="8dp"
          android:scrollbars="horizontal"
          android:text="0.00" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end">

      <TextView
          android:id="@+id/textView63"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_span="6"
          android:gravity="end"
          android:text="@string/cv_txt_total" />

      <TextView
          android:id="@+id/actVent_txtTotal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingStart="8dp"
          android:paddingEnd="8dp"
          android:scrollbars="horizontal"
          android:text="0.00" />
    </TableRow>
  </TableLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>